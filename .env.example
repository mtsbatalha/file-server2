# Port Configuration (change if ports are already in use)
BACKEND_PORT=8000
FRONTEND_PORT=3000

# Backend Configuration
# DATABASE_URL can be used directly, or use individual MySQL variables below
DATABASE_URL=sqlite:///./data/fileserver.db

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Frontend Configuration
VITE_API_URL=http://localhost:8000

# MySQL Remote Database Configuration
# Uncomment and fill these values to use a remote MySQL server
# MYSQL_HOST=your-mysql-server.com
# MYSQL_PORT=3306
# MYSQL_USER=your_username
# MYSQL_PASSWORD=your_password
# MYSQL_DATABASE=fileserver

# Alternative: Use DATABASE_URL directly for MySQL
# DATABASE_URL=mysql+pymysql://user:password@host:port/database?charset=utf8mb4

# PostgreSQL (optional)
# DATABASE_URL=postgresql://user:password@host:port/database

# SQL Debug
SQL_ECHO=false